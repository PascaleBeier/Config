{
    "name": "pascalebeier/config",
    "type": "library",
    "description": "Application Configuration",
    "keywords": [
        "PascaleBeier",
        "Config",
        "Configuration"
    ],
    "homepage": "https://github.com/PascaleBeier/Config",
    "license": "MIT",
    "authors": [
        {
            "name": "Pascale Beier",
            "email": "mail@pascalebeier.de",
            "homepage": "https://github.com/PascaleBeier",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0|~7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0|~6.0",
        "squizlabs/php_codesniffer": "~2.0|3.0"
    },
    "autoload": {
        "psr-4": {
            "PascaleBeier\\Config\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PascaleBeier\\Config\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
